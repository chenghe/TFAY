<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="15dp"
    android:padding="10dp"
    android:background="@drawable/mx_health_msg_layout"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/mx_chat_health_ranking_msg_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="50dp"
                android:textColor="@color/mx_health_smaller_text_color"
                />

            <TextView
                android:id="@+id/mx_chat_health_ranking_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:textColor="@color/mx_health_smaller_text_color"
                android:text="@string/mx_chat_health_ranking_num"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15dp"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/mx_chat_health_ranking_msg_step_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="50dp"
                android:textColor="@color/mx_health_smaller_text_color"
                />

            <TextView
                android:id="@+id/mx_chat_health_step_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_gravity="right"
                android:textColor="@color/mx_health_smaller_text_color"
                android:text="@string/mx_chat_health_ranking_step_count"
                />
        </LinearLayout>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/mx_common_divide_line"
        android:layout_marginLeft="@dimen/mx_public_setting_item_left"
        android:layout_marginRight="@dimen/mx_public_setting_item_left"
        android:layout_marginTop="35dp"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">


        <ImageView
            android:id="@+id/mx_ranking_champion_user_avatar"
            android:layout_width="40dp"
            android:layout_height="40dp"/>

        <TextView
            android:id="@+id/mx_ranking_champion_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/mx_ranking_champion_user_avatar"
            android:layout_marginLeft="10dp"
            android:textSize="16dp"
            android:textColor="@color/mx_health_smaller_text_color"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/mx_public_setting_item_right"
            android:src="@drawable/mx_icon_forward" />
    </RelativeLayout>
</LinearLayout>