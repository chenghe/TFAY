<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/mx_white"
    android:orientation="vertical" >

    <ScrollView
        android:id="@+id/all_group_scroll"
        android:layout_width="fill_parent"
        android:layout_height="350.0dip"
        android:scrollbarAlwaysDrawVerticalTrack="true"
        android:visibility="gone" >

        <LinearLayout
            android:id="@+id/all_group_scroll_layout"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical" />
    </ScrollView>

    <LinearLayout
        android:id="@+id/all_groups_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" />

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/mx_divider_horizontal" />

    <LinearLayout
        android:id="@+id/circle_option_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="10.0dip"
        android:paddingLeft="10.0dip"
        android:paddingRight="10.0dip"
        android:paddingTop="15.0dip" >

        <LinearLayout
            android:id="@+id/new_workcircle_btn"
            android:layout_width="0.0dip"
            android:layout_height="50.0dip"
            android:layout_weight="1.0"
            android:background="@drawable/mx_work_circle_btn_bg"
            android:gravity="center" >

            <com.minxing.kit.ui.widget.MXVariableTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:drawableLeft="@drawable/mx_new_work_circle_icon"
                android:drawablePadding="10.0dip"
                android:gravity="center"
                android:text="@string/mx_circle_select_group_popu_creat_btn"
                android:textColor="@color/mx_text_common_lightblue"
                android:textSize="18.0dip" />
        </LinearLayout>

        <View
            android:id="@+id/view_divider"
            android:layout_width="10.0dip"
            android:layout_height="50.0dip" />

        <LinearLayout
            android:id="@+id/view_group_list"
            android:layout_width="0.0dip"
            android:layout_height="50.0dip"
            android:layout_weight="1.0"
            android:background="@drawable/mx_work_circle_btn_bg"
            android:gravity="center" >

            <com.minxing.kit.ui.widget.MXVariableTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:drawableLeft="@drawable/mx_view_work_list_icon"
                android:drawablePadding="10.0dip"
                android:gravity="center"
                android:text="@string/mx_view_group_list"
                android:textColor="@color/mx_text_common_lightblue"
                android:textSize="18.0dip" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:id="@+id/mask_area"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1.0"
        android:background="#AF000000" />

</LinearLayout>