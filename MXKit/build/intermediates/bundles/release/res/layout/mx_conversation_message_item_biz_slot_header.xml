<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/mx_window_box_top_item_selector"
    android:focusable="true"
    android:orientation="vertical"
    android:padding="10.0dip" >

    <RelativeLayout
        android:id="@+id/header_cover_container"
        android:layout_width="fill_parent"
        android:layout_height="135.0dip"
        android:layout_marginBottom="12.0dip" >

        <ImageView
            android:id="@+id/header_cover"
            android:layout_width="fill_parent"
            android:layout_height="135.0dip"
            android:background="@color/mx_light_grey"
            android:scaleType="centerCrop" />

        <ImageView
            android:id="@+id/header_mask"
            android:layout_width="fill_parent"
            android:layout_height="135.0dip"
            android:background="@drawable/mx_secret_message_mask"
            android:scaleType="centerCrop" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@color/mx_half_alpha_black"
            android:gravity="center_vertical" >

            <com.minxing.kit.ui.widget.MXVariableTextView
                android:id="@+id/header_title_textview_in_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="2"
                android:padding="2.0dip"
                android:textColor="@color/mx_white"
                android:textSize="18.0dip" />
        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/header_nocover_container"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12.0dip"
        android:visibility="gone" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical" >

            <com.minxing.kit.ui.widget.MXVariableTextView
                android:id="@+id/header_title_without_conver"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="2"
                android:padding="2.0dip"
                android:textSize="18.0dip" />
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>