<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/ll_custom_bg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/mx_selector_red_bg"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="10dp"
            android:paddingLeft="25dp"
            android:paddingRight="15dp"
            android:paddingTop="10dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/iv_red_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:scaleType="fitXY"
                    android:src="@drawable/mx_icon_red_pocket" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="6dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_red_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:maxEms="10"
                    android:ellipsize="end"
                    android:text="@string/mx_red_packet_title"
                    android:textColor="@color/mx_white"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tv_red_description"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/mx_red_packet_description"
                    android:maxLines="1"
                    android:textColor="@color/mx_white"
                    android:textSize="12sp" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="4.5dp">

            <TextView
                android:id="@+id/tv_red_trademark"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="20dp"
                android:text="@string/mx_red_packet_trademask"
                android:maxLines="1"
                android:textColor="@color/mx_red_flag"
                android:textSize="9sp" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:id="@+id/filter_indicator"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</FrameLayout>
