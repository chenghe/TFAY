<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/mx_mail_list_bg_contact_dropdown_container" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/mx_s_list_bg_contact_dropdown"
        android:orientation="vertical"
        android:paddingBottom="3.0dip"
        android:paddingLeft="10.0dip"
        android:paddingRight="10.0dip"
        android:paddingTop="3.0dip" >

        <com.minxing.kit.ui.widget.MXVariableTextView
            android:id="@+id/contact_name"
            style="@style/mx_mm_font_title_in_list"
            android:duplicateParentState="true"
            android:textSize="12dip" />

        <com.minxing.kit.ui.widget.MXVariableTextView
            android:id="@+id/contact_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:duplicateParentState="true"
            android:ellipsize="end"
            android:singleLine="true"
            android:textColor="@color/mx_text_gray"
            android:textSize="10dip" />

        <com.minxing.kit.ui.widget.MXVariableTextView
            android:id="@+id/compose_contact_item_loading_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:duplicateParentState="true"
            android:ellipsize="end"
            android:minHeight="34.0dip"
            android:singleLine="true"
            android:text="@string/mx_label_search_loading"
            android:textColor="@color/mx_text_gray"
            android:textSize="16.0sp"
            android:visibility="gone" />
    </LinearLayout>

</LinearLayout>