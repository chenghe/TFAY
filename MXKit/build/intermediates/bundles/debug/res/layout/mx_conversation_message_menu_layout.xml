<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="bottom"
    android:background="@drawable/mx_btn_style_alert_dialog_background"
    android:gravity="bottom"
    android:orientation="vertical" >
    
    <com.minxing.kit.ui.widget.MXVariableTextView
        android:id="@+id/delete_btn"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/mx_common_btn_height"
        android:background="@drawable/mx_btn_style_alert_dialog_special"
        android:gravity="center"
        android:text="@string/mx_ask_delete_conversation_message"
        android:textColor="@color/mx_white"
        android:textSize="18.0dip" />

    <com.minxing.kit.ui.widget.MXVariableTextView
        android:id="@+id/copy_btn"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/mx_common_btn_height"
        android:layout_marginTop="@dimen/mx_pop_menu_margin"
        android:background="@drawable/mx_btn_style_alert_dialog_cancel"
        android:gravity="center"
        android:text="@string/mx_ask_copy_conversation_message"
        android:textColor="@color/mx_white"
        android:textSize="18.0dip" />
    
    <com.minxing.kit.ui.widget.MXVariableTextView
        android:id="@+id/forward_btn"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/mx_common_btn_height"
        android:layout_marginTop="@dimen/mx_pop_menu_margin"
        android:background="@drawable/mx_btn_style_alert_dialog_cancel"
        android:gravity="center"
        android:text="@string/mx_ask_forward_conversation_message"
        android:textColor="@color/mx_white"
        android:textSize="18.0dip" />
    
    <com.minxing.kit.ui.widget.MXVariableTextView
        android:id="@+id/collection_btn"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/mx_common_btn_height"
        android:layout_marginTop="@dimen/mx_pop_menu_margin"
        android:background="@drawable/mx_btn_style_alert_dialog_cancel"
        android:gravity="center"
        android:text="@string/mx_ask_collection_conversation_message"
        android:textColor="@color/mx_white"
        android:textSize="18.0dip" />
    
    <com.minxing.kit.ui.widget.MXVariableTextView
        android:id="@+id/revoke_btn"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/mx_common_btn_height"
        android:layout_marginTop="@dimen/mx_pop_menu_margin"
        android:background="@drawable/mx_btn_style_alert_dialog_cancel"
        android:gravity="center"
        android:text="@string/mx_ask_cancel_conversation_message"
        android:textColor="@color/mx_white"
        android:textSize="18.0dip" />
</LinearLayout>