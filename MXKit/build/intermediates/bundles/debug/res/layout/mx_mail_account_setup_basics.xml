<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/rl_mx_mail_message_setup_basics"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/mx_title_bar_height"
        android:background="@color/mx_header_bg_color">

        <ImageButton
            android:id="@+id/btn_mx_mail_message_setup_basics_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:background="@drawable/mx_btn_back" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal">

            <com.minxing.kit.ui.widget.MXVariableTextView
                android:id="@+id/tv_mx_message_setup_basics_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/mx_white"
                android:textSize="@dimen/mx_max_textsize" />

        </LinearLayout>

    </RelativeLayout>


    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_gravity="center_horizontal|center_vertical"
        android:orientation="vertical" >

        <LinearLayout
            style="@style/mx_mail_compose_addr_view_wrap"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30.0dip"
            android:orientation="horizontal" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dip"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingLeft="10.0dip" >

                <com.minxing.kit.ui.widget.MXVariableTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="5.0dip"
                    android:text="@string/mx_mail_accounts_setting_mail_addless_label"
                    android:textColor="@color/mx_black"
                    android:textSize="18.0dip" />

                <com.minxing.kit.ui.widget.MXVariableEditText
                    android:id="@+id/account_email"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:hint="@string/mx_label_mail_account"
                    android:inputType="textEmailAddress"
                    android:singleLine="true" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            style="@style/mx_mail_compose_addr_view_wrap"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dip"
            android:orientation="horizontal"
            android:paddingLeft="10.0dip" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dip"
                android:gravity="center"
                android:orientation="horizontal" >

                <com.minxing.kit.ui.widget.MXVariableTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="5.0dip"
                    android:text="@string/mx_mail_accounts_setting_password_label"
                    android:textColor="@color/mx_black"
                    android:textSize="18.0dip" />

                <com.minxing.kit.ui.widget.MXVariableEditText
                    android:id="@+id/account_password"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:hint="@string/mx_label_not_null"
                    android:inputType="textPassword"
                    android:singleLine="true" />
            </LinearLayout>
        </LinearLayout>

        <com.minxing.kit.ui.widget.MXButton
            android:id="@+id/init_btn"
            android:layout_width="wrap_content"
            android:layout_height="45.0dip"
            android:layout_gravity="center"
            android:layout_marginTop="15.0dip"
            android:background="@drawable/mx_comm_blue_button2"
            android:gravity="center"
            android:enabled="false"
            android:text="@string/mx_button_login"
            android:textColor="@color/mx_mail_init_btn_text"
            android:textSize="16dip" />
    </LinearLayout>

</LinearLayout>