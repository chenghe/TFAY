<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/mx_health_ranking_item_bg">

    <TextView
        android:id="@+id/mx_health_rankings_item_num"
        android:layout_width="45dp"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:textColor="#333333"
        android:textSize="20dp"/>


    <ImageView
        android:id="@+id/mx_health_rankings_item_avatar"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/mx_health_rankings_item_num"
        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_toRightOf="@id/mx_health_rankings_item_avatar"
        android:gravity="center_vertical"
        android:layout_marginLeft="10dp"
        android:orientation="vertical">
        <TextView
            android:id="@+id/mx_health_rankings_item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:maxWidth="100dp"
            android:maxLines="1"
            android:ellipsize="end"
            android:textSize="20dp"
            />
        <TextView
            android:id="@+id/mx_health_rankings_item_rank_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:textColor="#9c9c9c"
            android:textSize="15dp"
            />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/mx_health_rankings_item_praise_layout"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:gravity="center"
        android:paddingRight="20dp"
        android:paddingLeft="20dp"
        android:orientation="vertical"
        >
        <TextView
            android:id="@+id/mx_health_rankings_item_praise_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#6a6a6a"
            android:textSize="15dp"/>
        <ImageView
            android:id="@+id/mx_health_rankings_item_praise_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="@drawable/mx_health_praise_img_select"
            />

    </LinearLayout>

    <TextView
        android:id="@+id/mx_health_rankings_item_step_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@id/mx_health_rankings_item_praise_layout"
        android:textSize="35dp"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#e2e2e2"
        android:layout_alignParentBottom="true"/>

</RelativeLayout>