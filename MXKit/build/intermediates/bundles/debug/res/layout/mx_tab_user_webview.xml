<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/view_header"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/mx_title_bar_height"
        android:background="@color/mx_header_bg_color" >

        <com.minxing.kit.ui.widget.MXVariableTextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:ellipsize="end"
            android:gravity="center"
            android:singleLine="true"
            android:text="@string/mx_work_circles"
            android:textColor="@color/mx_white"
            android:textSize="@dimen/mx_max_textsize" />
    </RelativeLayout>
    <WebView
        android:id="@+id/mx_user_webview"
        android:layout_width="match_parent"
        android:background="@color/mx_white"
        android:layout_height="match_parent"></WebView>

</LinearLayout>