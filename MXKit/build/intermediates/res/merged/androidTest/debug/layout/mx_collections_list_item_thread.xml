<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@color/mx_white"
    android:orientation="vertical"
    android:padding="15.0dip" >

    <include layout="@layout/mx_collections_list_item_header" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15.0dip"
        android:background="@drawable/mx_collection_item_bg"
        android:orientation="vertical"
        android:padding="10.0dip" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:duplicateParentState="true" >

            <RelativeLayout
                android:id="@+id/thread_thumb_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginRight="5.0dip"
                android:layout_marginTop="3dip" >

                <ImageView
                    android:id="@+id/thread_thumb"
                    android:layout_width="60.0dip"
                    android:layout_height="60.0dip"
                    android:scaleType="centerCrop" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="0.0dip"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1.0"
                android:orientation="vertical" >

                <com.minxing.kit.ui.widget.MXVariableTextView
                    android:id="@+id/thread_title"
                    style="@style/mx_mm_font_title_in_list"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLines="3"
                    android:singleLine="false" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>