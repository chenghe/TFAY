<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/mx_mail_lightgrey"
    android:orientation="vertical" >

    <!-- 账户 -->

    <LinearLayout
        android:id="@+id/slid_account_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >
    </LinearLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="35dip"
        android:background="@drawable/mx_mail_bg_slid_item_selector"
        android:clickable="false"
        android:orientation="vertical" >

        <com.minxing.kit.ui.widget.MXVariableTextView
            android:id="@+id/account_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/divider"
            android:layout_marginBottom="2dip"
            android:layout_marginLeft="18dip"
            android:text="@string/mx_mail_slidingmenu_dir"
            android:textColor="@color/mx_mail_text_gray"
            android:textSize="14dip" />

        <View
            android:id="@+id/divider"
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:layout_alignParentBottom="true"
            android:background="@drawable/mx_divider_white" />
    </RelativeLayout>

    <!-- 文件夹 -->

    <LinearLayout
        android:id="@+id/slid_folders_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >
        
    </LinearLayout>
    <View
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:layout_alignParentBottom="true"
            android:background="@drawable/mx_divider_white" />

    <LinearLayout
        android:id="@+id/mx_mail_account_add"
        android:layout_width="fill_parent"
        android:layout_height="48dip"
        android:background="@drawable/mx_mail_bg_slid_item_selector"
        android:layout_marginTop="20dip"
        android:clickable="true"
        android:orientation="vertical" >

        <View
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:background="@drawable/mx_divider_white" />

        <LinearLayout
            android:id="@+id/mx_mail_account_add_content"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:duplicateParentState="true"
            android:orientation="horizontal" >

            <LinearLayout
                android:layout_width="50dip"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:gravity="center_horizontal" >

                <ImageView
                    android:id="@+id/mx_mail_folder_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/mx_mail_ic_slid_add" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:duplicateParentState="true"
                android:gravity="center_horizontal"
                android:orientation="vertical" >

                <com.minxing.kit.ui.widget.MXVariableTextView
                    android:id="@+id/account_name"
                    style="@style/mx_slid_item_text"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:duplicateParentState="true"
                    android:gravity="center_vertical"
                    android:text="@string/mx_mail_slidingmenu_add_account" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dip"
                    android:layout_alignParentBottom="true"
                    android:background="@drawable/mx_divider_white" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/mx_mail_setting"
        android:layout_width="fill_parent"
        android:layout_height="48dip"
        android:layout_marginBottom="20dip"
        android:background="@drawable/mx_mail_bg_slid_item_selector"
        android:clickable="true"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_centerVertical="true"
            android:duplicateParentState="true"
            android:orientation="horizontal" >

            <LinearLayout
                android:layout_width="50dip"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:gravity="center_horizontal" >

                <ImageView
                    android:id="@+id/mx_mail_folder_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/mx_mail_ic_slid_setting" />
            </LinearLayout>

            <com.minxing.kit.ui.widget.MXVariableTextView
                android:id="@+id/account_name"
                style="@style/mx_slid_item_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:duplicateParentState="true"
                android:text="@string/mx_mail_slidingmenu_setting" />
        </LinearLayout>

        <View
            android:id="@+id/divider"
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:layout_alignParentBottom="true"
            android:background="@drawable/mx_divider_white" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/mx_mail_logoput"
        android:layout_width="fill_parent"
        android:layout_height="48dip"
        android:layout_marginBottom="20dip"
        android:layout_marginTop="20dip"
        android:background="@drawable/mx_mail_bg_slid_item_selector"
        android:clickable="true"
        android:orientation="vertical"
        android:visibility="gone" >
         <View
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:layout_alignParentBottom="true"
            android:background="@drawable/mx_divider_white" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_centerVertical="true"
            android:duplicateParentState="true"
            android:orientation="horizontal" >

            <LinearLayout
                android:layout_width="50dip"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:gravity="center_horizontal" >

                <ImageView
                    android:id="@+id/mx_mail_folder_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/mx_mail_ic_slid_logout" />
            </LinearLayout>

            <com.minxing.kit.ui.widget.MXVariableTextView
                android:id="@+id/account_name"
                style="@style/mx_slid_item_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:duplicateParentState="true"
                android:text="@string/mx_mail_logout" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:layout_alignParentBottom="true"
            android:background="@drawable/mx_divider_white" />
    </LinearLayout>

</LinearLayout>