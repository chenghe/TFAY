<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@color/mx_white"
    android:orientation="vertical"
    android:padding="15.0dip" >

    <include layout="@layout/mx_collections_list_item_header" />

    <LinearLayout
        android:id="@+id/file_click_area"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15.0dip"
        android:padding="10.0dip"
        android:background="@drawable/mx_collection_item_bg" >

        <ImageView
            android:id="@+id/file_thumb"
            android:layout_width="60.0dip"
            android:layout_height="60.0dip"
            android:scaleType="centerCrop" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="10.0dip"
            android:duplicateParentState="true"
            android:orientation="vertical" >

            <com.minxing.kit.ui.widget.MXVariableTextView
                android:id="@+id/file_name"
                style="@style/mx_mm_font_title_in_list"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="3.0dip"
                android:ellipsize="end"
                android:maxLines="3"
                android:singleLine="false" />

            <com.minxing.kit.ui.widget.MXVariableTextView
                android:id="@+id/file_size"
                style="@style/mx_mm_font_tip_in_list"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="false" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>