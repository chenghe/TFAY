<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="mx_tabswitcher_attr">
        <attr name="arrayId" format="reference" />
        <attr name="selectedPosition" format="integer" />
    </declare-styleable>
    
    <declare-styleable name="mx_roundedimageview">
        <attr name="mx_border_thickness" format="dimension" />
        <attr name="mx_border_inside_color" format="color" />
        <attr name="mx_border_outside_color" format="color" />
    </declare-styleable>
    
    <attr name="mx_cropImageStyle" format="reference" />

    <declare-styleable name="mx_CropImageView">
        <attr name="highlightColor" format="reference|color" />
        <attr name="showThirds" format="boolean" />
        <attr name="showCircle" format="boolean" />
        <attr name="showHandles">
          <enum name="changing" value="0" />
          <enum name="always" value="1" />
          <enum name="never" value="2" />
        </attr>
    </declare-styleable>
    
    <declare-styleable name="mx_FontStyle">
    <attr name="mx_font_small" format="dimension" />
    <attr name="mx_font_medium" format="dimension" />
    <attr name="mx_font_large" format="dimension" />
    <attr name="mx_font_xlarge" format="dimension" />
</declare-styleable>

    <declare-styleable name="mx_PhasedSeekBar">
        <attr name="mx_phased_mode">
            <enum name="horizontal" value="1"/>
            <enum name="vertical" value="2"/>
        </attr>
        <attr name="mx_phased_base_margin_left" format="dimension|reference"/>
        <attr name="mx_phased_base_margin_right" format="dimension|reference"/>
        <attr name="mx_phased_base_margin_top" format="dimension|reference"/>
        <attr name="mx_phased_base_margin_bottom" format="dimension|reference"/>
        <attr name="mx_phased_base_background" format="color|reference"/>
        <attr name="mx_phased_item_width" format="dimension|reference"/>
        <attr name="mx_phased_item_height" format="dimension|reference"/>
        <attr name="mx_phased_anchor_width" format="dimension|reference"/>
        <attr name="mx_phased_anchor_height" format="dimension|reference"/>
        <attr name="mx_phased_draw_on_off" format="boolean"/>
        <attr name="mx_phased_fix_point" format="boolean"/>
    </declare-styleable>

    <declare-styleable name="nodata">
        <!--name是属性名字  format是属性类型  -->
        <attr name="despriction" format="string" />
        <attr name="no_data_icon" format="reference"/>
    </declare-styleable>

    <declare-styleable name="PullToZoomView">
        <attr name="headerView" format="reference" />
        <attr name="contentView" format="reference" />
        <attr name="zoomView" format="reference" />
        <attr name="isHeaderParallax" format="boolean" />
    </declare-styleable>

    <declare-styleable name="MXFlowLayout">
        <attr name="auto_select_effect" format="boolean"></attr>
        <attr name="max_select" format="integer"></attr>
        <attr name="gravity">
            <enum name="left" value="-1" />
            <enum name="center" value="0" />
            <enum name="right" value="1" />
        </attr>
    </declare-styleable>
</resources>