<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.K9Dialog" parent="@android:Theme.Light">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowBackground">@drawable/mx_mail_popup_background</item>
        <item name="android:windowTitleStyle">?android:attr/textAppearanceLargeInverse</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowContentOverlay">@drawable/mx_mail_panel_separator</item>
    </style>

    <!--
      Fix a bug with AutoCompleteTextView
      See https://code.google.com/p/android/issues/detail?id=5237
    -->
    <style name="Widget.K9.AutoCompleteTextView" parent="@android:style/Widget.AutoCompleteTextView">
        <item name="android:textColor">@android:color/primary_text_light</item>
    </style>

    <style name="TextAppearance.StatusBar.EventContent.Emphasized" parent="@android:style/TextAppearance.StatusBar.EventContent">
        <item name="android:textColor">#cccccc</item>
    </style>

    <style name="UnreadWidgetContainer">
        <item name="android:paddingTop">0dp</item>
        <item name="android:paddingLeft">0dp</item>
        <item name="android:paddingRight">0dp</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="android:background">@null</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="UnreadWidgetTextView">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:shadowColor">#000000</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">4.0</item>
    </style>

    
    
    <style name="mx_slid_item_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_marginLeft">8dip</item>
        <item name="android:clickable">false</item>
        <item name="android:textSize">17.0dip</item>
        <item name="android:duplicateParentState">true</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@color/mx_slid_item_text</item>
        <item name="android:maxWidth">190.0dip</item>
    </style>
    
    <style name="mx_slid_setting_item_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_marginLeft">8dip</item>
        <item name="android:clickable">false</item>
        <item name="android:textSize">17.0dip</item>
        <item name="android:duplicateParentState">true</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@color/mx_black</item>
        <item name="android:maxWidth">190.0dip</item>
    </style>
    
    <style name="mx_mail_compose_addr_view_input">
        <item name="android:textSize">16.0sp</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:background">@null</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">34dip</item>
        <item name="android:minWidth">20dip</item>
        <item name="android:minHeight">34.0dip</item>
        <item name="android:singleLine">true</item>
        <item name="android:selectAllOnFocus">true</item>
        <item name="android:completionThreshold">1</item>
        <item name="android:dropDownWidth">fill_parent</item>
        <item name="android:imeOptions">actionNext</item>
        <item name="android:dropDownHeight">wrap_content</item>
    </style>
    <style name="mx_mail_compose_addr_view_wrap">
        <item name="android:gravity">center_vertical</item>
        <item name="android:orientation">vertical</item>
        <item name="android:background">@drawable/mx_mail_bg_edittext</item>
        <item name="android:paddingLeft">0dip</item>
        <item name="android:paddingTop">0dip</item>
        <item name="android:paddingRight">0dip</item>
        <item name="android:paddingBottom">0dip</item>
        <item name="android:layout_marginTop">5.0dip</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">16dip</item>
    </style>
    
    <style name="mx_mail_compose_addr_view_simple_wrap">
        <item name="android:gravity">center_vertical</item>
        <item name="android:orientation">vertical</item>
        <item name="android:paddingLeft">0dip</item>
        <item name="android:paddingTop">0dip</item>
        <item name="android:paddingRight">0dip</item>
        <item name="android:paddingBottom">0dip</item>
        <item name="android:layout_marginTop">0.0dip</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">16dip</item>
    </style>
    
    <style name="mx_tab_button">
        <item name="android:textSize">12.0dip</item>
        <item name="android:textColor">@drawable/mx_menu_tab_name_selector</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:background">@drawable/mx_tab_bg</item>
        <item name="android:layout_width">0.0dip</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">0.70000005dip</item>
        <item name="android:layout_marginRight">0.70000005dip</item>
        <item name="android:paddingTop">3dip</item>
        <item name="android:layout_marginBottom">3dip</item>
        <item name="android:button">@null</item>
        <item name="android:layout_weight">1.0</item>
        <item name="android:singleLine">true</item>
    </style>
    
</resources>

