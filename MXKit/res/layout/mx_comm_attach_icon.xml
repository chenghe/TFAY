<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="@dimen/mx_attach_dimen"
    android:layout_height="@dimen/mx_attach_dimen">

    <ImageView
        android:id="@+id/attach_icon"
        android:layout_width="@dimen/mx_attach_dimen"
        android:layout_height="@dimen/mx_attach_dimen"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop" />

    <ImageView
        android:id="@+id/play_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:src="@drawable/mx_video_mask"
        android:visibility="gone" />

    <ImageView
        android:layout_marginLeft="@dimen/mx_attach_dimen"
        android:layout_width="4.0dip"
        android:layout_height="@dimen/mx_attach_dimen" />
</FrameLayout>