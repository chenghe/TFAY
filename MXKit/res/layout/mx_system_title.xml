<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="@dimen/mx_title_bar_height"
                android:id="@+id/system_head_view"
    android:background="@drawable/nv_title_bg"
    android:gravity="center_vertical" >

    <!-- 左侧按钮 -->

    <ImageButton
        android:id="@+id/title_left_button"
        style="@style/mx_mm_title_button"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:src="@drawable/mx_btn_back" />

    <com.minxing.kit.ui.widget.MXButton
        android:id="@+id/btn_mx_system_title_cancel"
        style="@style/mx_mm_title_button"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:text="@string/mx_cancel"
        android:textColor="@color/mx_white"
        android:textSize="14sp"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/middle_title"
        android:layout_width="180dip"
        android:layout_height="fill_parent"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:clickable="true"
        android:gravity="center"
        android:orientation="horizontal" >

        <com.minxing.kit.ui.widget.MXVariableTextView
            android:id="@+id/title_name"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:ellipsize="end"
            android:gravity="center"
            android:singleLine="true"
            android:textColor="@color/mx_header_text_color"
            android:textSize="@dimen/mx_header_text_size" />

        <com.minxing.kit.ui.widget.MXVariableTextView
            android:id="@+id/title_progress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/mx_header_text_color"
            android:textSize="@dimen/mx_header_text_size"
            android:visibility="gone" />

        <ProgressBar
            android:id="@+id/loading_progess"
            style="?android:attr/progressBarStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone" />
    </LinearLayout>

    <!-- 右侧按钮 -->

    <com.minxing.kit.ui.widget.MXButton
        android:id="@+id/title_right_button"
        style="@style/mx_mm_title_button"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:textColor="@color/mx_white"
        android:textSize="14sp"
        android:visibility="gone" />

    <com.minxing.kit.ui.widget.MXButton
        android:id="@+id/title_right_cancel_button"
        style="@style/mx_mm_title_button"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:text="@string/mx_cancel"
        android:textColor="@color/mx_white"
        android:textSize="14sp"
        android:visibility="gone" />

    <com.minxing.kit.ui.widget.MXButton
        android:id="@+id/title_right_save_button"
        style="@style/mx_mm_title_button"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:text="@string/mx_ok"
        android:textColor="@color/mx_white"
        android:textSize="14sp"
        android:visibility="gone" />


    <ImageButton
        android:id="@+id/right_btn_check_person_detail"
        style="@style/mx_mm_title_button"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:src="@drawable/mx_btn_single_chat"
        android:visibility="gone" />

    <ImageButton
        android:id="@+id/right_btn_new_public_account"
        style="@style/mx_mm_title_button"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:src="@drawable/mx_btn_add"
        android:visibility="gone" />
    <!--
    <ImageButton
        android:id="@+id/title_right_new_conversation"
        style="@style/mx_mm_title_button"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:src="@drawable/mx_icon_menu_im"
        android:visibility="gone" />

    -->

    <ImageButton
        android:id="@+id/title_right_share"
        style="@style/mx_mm_title_button"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:src="@drawable/mx_mm_title_btn_share"
        android:visibility="gone" />

    <ImageButton
        android:id="@+id/title_right_more"
        style="@style/mx_mm_title_button"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:src="@drawable/mx_btn_webview_operation"
        android:visibility="gone" />

    <ImageButton
        android:id="@+id/title_right_new_mail"
        style="@style/mx_mm_title_button"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:src="@drawable/mx_btn_sns_new"
        android:visibility="gone" />

    <ImageButton
        android:id="@+id/title_right_delete"
        style="@style/mx_mm_title_button"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:src="@drawable/mx_btn_delete_normal"
        android:visibility="gone" />

    <com.minxing.kit.ui.widget.MXButton
        android:id="@+id/finish_edit_btn"
        style="@style/mx_mm_title_button"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:text="@string/mx_app_center_finish_edit"
        android:textColor="@color/mx_white"
        android:textSize="14sp"
        android:visibility="gone" />
    
</RelativeLayout>