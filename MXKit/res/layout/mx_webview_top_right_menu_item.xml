<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:id="@+id/btn_popu_item_layout"
        android:layout_width="match_parent"
        android:layout_height="0.0dip"
        android:layout_weight="1.0"
        android:background="@drawable/mx_popup_menu_item_selector"
        android:orientation="vertical" >

        <LinearLayout
            style="@style/mx_menu_pop_item"
            android:layout_width="wrap_content"
            android:layout_height="0.0dip"
            android:layout_weight="1.0" >

            <ImageView
                android:id="@+id/mx_web_right_popu_item_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/mx_icon_share_to_chat" />

            <com.minxing.kit.ui.widget.MXVariableTextView
                android:id="@+id/mx_web_right_popu_item_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="5.0dip"
                android:text="@string/mx_readerapp_alert_share_to_conversation"
                android:textColor="@color/mx_white"
                android:textSize="18.0dip" />
        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:id="@+id/mx_bg_menu_segment"
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="@dimen/mx_pop_menu_margin"
        android:layout_marginRight="@dimen/mx_pop_menu_margin"
        android:background="@drawable/mx_bg_menu_segment" />
</LinearLayout>