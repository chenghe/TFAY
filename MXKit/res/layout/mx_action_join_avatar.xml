<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <FrameLayout
        android:layout_width="@dimen/mx_circle_item_action_popup_avatar_size"
        android:layout_height="@dimen/mx_circle_item_action_popup_avatar_size"
        android:layout_marginTop="5dp"
        android:layout_gravity="center_horizontal"
        android:background="@null" >

        <LinearLayout
            android:layout_width="@dimen/mx_circle_item_action_popup_avatar_size"
            android:layout_height="@dimen/mx_circle_item_action_popup_avatar_size"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal" >

            <FrameLayout
                android:layout_width="@dimen/mx_circle_item_action_popup_avatar_size"
                android:layout_height="@dimen/mx_circle_item_action_popup_avatar_size"
                android:background="@null"
                android:gravity="center_horizontal" >

                <ImageView
                    android:id="@+id/avatar"
                    android:layout_width="@dimen/mx_circle_item_action_popup_avatar_size"
        			android:layout_height="@dimen/mx_circle_item_action_popup_avatar_size"
                    android:layout_gravity="center"
                    android:src="@drawable/mx_btn_bg_grid_add_selector" />
            </FrameLayout>
        </LinearLayout>


    </FrameLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="horizontal" >

        <com.minxing.kit.ui.widget.MXVariableTextView
            android:id="@+id/avatar_name"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:singleLine="true"
            android:textSize="7.0dip" />
    </LinearLayout>
</LinearLayout>