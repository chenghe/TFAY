<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/mx_common_bg" >

    <include
        android:id="@+id/system_title"
        layout="@layout/mx_system_title" />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/system_title"
        android:layout_marginLeft="@dimen/mx_comm_container_marginboth"
        android:layout_marginRight="@dimen/mx_comm_container_marginboth" >

        <LinearLayout
            style="@style/mx_mm_body"
            android:padding="10.0dip" >

            <com.minxing.kit.ui.widget.MXVariableEditText
                android:id="@+id/oldPwd"
                style="@style/mx_mm_line_edit_text"
                android:inputType="textPassword"
                android:paddingLeft="10.0dip"
                android:drawableLeft="@drawable/mx_icon_login_passwd"
                android:drawablePadding="5.0dip"
                android:textColorHint="@color/mx_half_alpha_black"
                android:hint="@string/mx_toast_please_input_old_pwd" />

            <com.minxing.kit.ui.widget.MXVariableEditText
                android:id="@+id/newPwd"
                style="@style/mx_mm_line_edit_text"
                android:inputType="textPassword"
                android:paddingLeft="10.0dip"
                android:layout_marginTop="2.0dip"
                android:drawableLeft="@drawable/mx_icon_login_passwd"
                android:drawablePadding="5.0dip"
                android:textColorHint="@color/mx_half_alpha_black"
                android:hint="@string/mx_toast_please_input_new_pwd" />

            <com.minxing.kit.ui.widget.MXVariableEditText
                android:id="@+id/newPwdConfirm"
                style="@style/mx_mm_line_edit_text"
                android:inputType="textPassword"
                android:paddingLeft="10.0dip"
                android:layout_marginTop="2.0dip"
                android:drawableLeft="@drawable/mx_icon_login_passwd"
                android:drawablePadding="5.0dip"
                android:textColorHint="@color/mx_half_alpha_black"
                android:hint="@string/mx_label_please_input_new_pwd_again" />

            <LinearLayout
                android:id="@+id/save_btn_layout"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <com.minxing.kit.ui.widget.MXVariableTextView
                    android:id="@+id/save_btn"
                    android:layout_width="fill_parent"
                    android:layout_height="@dimen/mx_common_btn_height"
                    android:layout_marginTop="5dip"
                    android:background="@drawable/mx_comm_blue_button"
                    android:gravity="center"
                    android:text="@string/mx_tip_complete"
                    android:textColor="@color/mx_white"
                    android:textSize="18.0dip" />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>