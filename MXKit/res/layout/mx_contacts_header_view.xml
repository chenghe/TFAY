<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/view_header"
    android:layout_width="fill_parent"
    android:layout_height="@dimen/mx_title_bar_height"
    android:background="@color/mx_header_bg_color" >

    <ImageButton
        android:id="@+id/title_left_button"
        style="@style/mx_title_button"
        android:layout_alignParentLeft="true"
        android:src="@drawable/mx_btn_back" />

    <ImageButton
        android:id="@+id/title_to_root"
        style="@style/mx_title_button"
        android:layout_toRightOf="@id/title_left_button"
        android:visibility="gone"
        android:src="@drawable/mx_btn_close" />

    <com.minxing.kit.ui.widget.MXVariableTextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:ellipsize="end"
        android:gravity="center"
        android:singleLine="true"
        android:text="@string/mx_contact"
        android:textColor="@color/mx_white"
        android:textSize="@dimen/mx_max_textsize" />
    
    <com.minxing.kit.ui.widget.MXButton
        android:id="@+id/select_all_btn"
        style="@style/mx_mm_title_button"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:text="@string/mx_contact_header_select_all"
        android:layout_marginRight="10dp"
        android:textColor="@color/mx_white"
        android:textSize="14sp"
        android:visibility="gone"/>

</RelativeLayout>