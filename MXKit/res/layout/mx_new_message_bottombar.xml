<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/mx_new_message_bottom_bg"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/add_camera"
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:clickable="true"
            android:src="@drawable/mx_new_message_bottom_camera" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/mx_new_message_bottom_icon_divider" />

        <ImageView
            android:id="@+id/add_video"
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:clickable="true"
            android:src="@drawable/mx_new_message_bottom_video" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/mx_new_message_bottom_icon_divider" />

        <LinearLayout
            android:id="@+id/add_topic_layout"
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/add_topic"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:clickable="true"
                android:src="@drawable/mx_new_message_bottom_topic" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/mx_new_message_bottom_icon_divider" />
        </LinearLayout>

        <ImageView
            android:id="@+id/add_audio"
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:clickable="true"
            android:src="@drawable/mx_new_message_bottom_audio"
            android:visibility="gone" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/mx_new_message_bottom_icon_divider"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/add_attach"
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:clickable="true"
            android:src="@drawable/mx_new_message_bottom_attach"
            android:visibility="gone" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/mx_new_message_bottom_icon_divider"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/add_at"
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:clickable="true"
            android:src="@drawable/mx_new_message_bottom_at" />

        <LinearLayout
            android:id="@+id/add_smiley_layout"
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:visibility="gone" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/mx_new_message_bottom_icon_divider" />

            <ImageView
                android:id="@+id/add_smiley"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/mx_new_message_bottom_smiley" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/message_smiley_panel"
        android:layout_width="fill_parent"
        android:layout_height="177.0dip"
        android:orientation="vertical"
        android:visibility="gone" >

        <android.support.v4.view.ViewPager
            android:id="@+id/smiley_panel_flipper"
            android:layout_width="fill_parent"
            android:layout_height="0.0dip"
            android:layout_weight="1.0"
            android:gravity="center" />

        <LinearLayout
            android:id="@+id/smiley_panel_dot"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingBottom="10.0dip" >
        </LinearLayout>
    </LinearLayout>

</LinearLayout>