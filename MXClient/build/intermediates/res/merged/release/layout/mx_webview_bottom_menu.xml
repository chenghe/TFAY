<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff">

        <com.minxing.kit.ui.widget.phasedseekbar.PhasedSeekBar
        android:id="@+id/psb_hor"
        android:layout_width="360dip"
        android:layout_height="100dip"
        android:layout_gravity="center"
        app:mx_phased_anchor_height="40dp"
        app:mx_phased_anchor_width="40dp"
        app:mx_phased_base_background="@drawable/mx_seekbar_background"
        app:mx_phased_base_margin_bottom="10dp"
        app:mx_phased_base_margin_left="50dp"
        app:mx_phased_base_margin_right="50dp"
        app:mx_phased_base_margin_top="40dp"
        app:mx_phased_item_height="10dip"
        app:mx_phased_item_width="30dp"
        app:mx_phased_mode="horizontal"/>


</LinearLayout>