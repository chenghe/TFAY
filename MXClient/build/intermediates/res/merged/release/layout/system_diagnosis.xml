<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/bg_grey_dark" >

    <include
        android:id="@+id/system_title"
        layout="@layout/system_title" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/system_title" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10.0dip" >

            <com.minxing.kit.ui.widget.MXVariableTextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="@string/diagosis_http_server"
                android:textColor="@color/black"
                android:textSize="@dimen/middle_textsize"
                android:textStyle="bold" />

            <com.minxing.kit.ui.widget.MXVariableTextView
                android:id="@+id/diagosis_http_server_tv"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="3.0dip"
                android:text="@string/diagosis_http_server"
                android:textColor="@color/black"
                android:textSize="@dimen/middle_textsize" />

            <com.minxing.kit.ui.widget.MXVariableEditText
                android:id="@+id/diagosis_http_server_et"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="3.0dip"
                android:textColor="@color/black"
                android:textSize="@dimen/middle_textsize"
                android:visibility="gone" />

            <LinearLayout
                android:id="@+id/diagosis_http_server_btn_layout"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6.0dip"
                android:orientation="vertical" >

                <com.minxing.kit.ui.widget.MXVariableTextView
                    android:id="@+id/diagosis_http_server_btn"
                    android:layout_width="fill_parent"
                    android:layout_height="@dimen/common_btn_height"
                    android:layout_marginLeft="10.0dip"
                    android:layout_marginRight="10.0dip"
                    android:layout_marginTop="5dip"
                    android:background="@drawable/btn_style_alert_dialog_special"
                    android:gravity="center"
                    android:text="Change Http Server"
                    android:textColor="@color/white"
                    android:textSize="18.0dip" />
            </LinearLayout>

            <com.minxing.kit.ui.widget.MXVariableTextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="6.0dip"
                android:text="@string/diagosis_push_server"
                android:textColor="@color/black"
                android:textSize="@dimen/middle_textsize"
                android:textStyle="bold" />

            <com.minxing.kit.ui.widget.MXVariableTextView
                android:id="@+id/diagosis_push_server_tv"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="3.0dip"
                android:text="@string/diagosis_http_server"
                android:textColor="@color/black"
                android:textSize="@dimen/middle_textsize" />

            <com.minxing.kit.ui.widget.MXVariableEditText
                android:id="@+id/diagosis_push_server_et"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="3.0dip"
                android:textColor="@color/black"
                android:textSize="@dimen/middle_textsize"
                android:visibility="gone" />

            <LinearLayout
                android:id="@+id/diagosis_push_server_btn_layout"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6.0dip"
                android:orientation="vertical" >

                <com.minxing.kit.ui.widget.MXVariableTextView
                    android:id="@+id/diagosis_push_server_btn"
                    android:layout_width="fill_parent"
                    android:layout_height="@dimen/common_btn_height"
                    android:layout_marginLeft="10.0dip"
                    android:layout_marginRight="10.0dip"
                    android:layout_marginTop="5dip"
                    android:background="@drawable/btn_style_alert_dialog_special"
                    android:gravity="center"
                    android:text="Change Push Server"
                    android:textColor="@color/white"
                    android:textSize="18.0dip" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/diagnosis_btn_layout"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6.0dip"
                android:orientation="vertical" >

                <com.minxing.kit.ui.widget.MXVariableTextView
                    android:id="@+id/diagnosis_btn"
                    android:layout_width="fill_parent"
                    android:layout_height="@dimen/common_btn_height"
                    android:layout_marginLeft="10.0dip"
                    android:layout_marginRight="10.0dip"
                    android:layout_marginTop="5dip"
                    android:background="@drawable/btn_style_alert_dialog_special"
                    android:gravity="center"
                    android:text="@string/diagosis_btn"
                    android:textColor="@color/white"
                    android:textSize="18.0dip" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/diagosis_http_server_check"
                style="@style/bg_setting_item_narrow"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6.0dip"
                android:orientation="horizontal"
                android:visibility="gone" >

                <com.minxing.kit.ui.widget.MXVariableTextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1.0"
                    android:text="@string/diagosis_http_server_alert"
                    android:textColor="@color/black"
                    android:textSize="@dimen/middle_textsize" />

                <ProgressBar
                    android:id="@+id/diagosis_http_server_check_loading"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <com.minxing.kit.ui.widget.MXVariableTextView
                android:id="@+id/diagosis_http_server_check_result"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="3.0dip"
                android:textColor="@color/black"
                android:textSize="@dimen/middle_textsize"
                android:visibility="gone" />

            <com.minxing.kit.ui.widget.MXVariableTextView
                android:id="@+id/diagosis_http_server_check_detail"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="3.0dip"
                android:textColor="@color/black"
                android:textSize="@dimen/middle_textsize"
                android:visibility="gone" />

            <LinearLayout
                android:id="@+id/diagosis_push_server_check"
                style="@style/bg_setting_item_narrow"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6.0dip"
                android:orientation="horizontal"
                android:visibility="gone" >

                <com.minxing.kit.ui.widget.MXVariableTextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1.0"
                    android:text="@string/diagosis_push_server_alert"
                    android:textColor="@color/black"
                    android:textSize="@dimen/middle_textsize" />

                <ProgressBar
                    android:id="@+id/diagosis_push_server_check_loading"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <com.minxing.kit.ui.widget.MXVariableTextView
                android:id="@+id/diagosis_push_server_check_result"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="3.0dip"
                android:textColor="@color/black"
                android:textSize="@dimen/middle_textsize"
                android:visibility="gone" />

            <com.minxing.kit.ui.widget.MXVariableTextView
                android:id="@+id/diagosis_push_server_check_detail"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="3.0dip"
                android:textColor="@color/black"
                android:textSize="@dimen/middle_textsize"
                android:visibility="gone" />
        </LinearLayout>
    </ScrollView>

</RelativeLayout>