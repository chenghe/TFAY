<?xml version='1.0' encoding='utf-8'?>

<widget
    id="com.minxing.kit.plugin"
    version="2.0.0"
    xmlns="http://www.w3.org/ns/widgets" >

    <name>
        Minxing  Cordova

    </name>

    <description>
        Minxing  Cordova plugin config file.
    </description>
    <author
        email="dev@cordova.apache.org"
        href="http://cordova.io" >
        Apache Cordova Team

    </author>

    <content src="index.html" />

    <access
        launch-external="yes"
        origin="*" />

    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="[[[[[[[[1]]]]]]]]" />
    <allow-intent href="[[[[[[[[2]]]]]]]]" />
    <allow-intent href="mailto:*" />
    <allow-intent href="[[[[[[[[3]]]]]]]]" />
    <allow-intent href="market:*" />
    <allow-intent href="content:*" />

    <preference
        name="loglevel"
        value="DEBUG" />

    <feature name="MXLocation" >
        <param
            name="android-package"
            value="com.minxing.client.plugin.web.location.MXLocation" />
    </feature>

    <feature name="ZSImei" >
    <param
    name="android-package"
    value="com.minxing.client.plugin.web.zsmarter.zsimei.ZSImei" />
    </feature>


    <preference
        name="Fullscreen"
        value="false" />
    <preference
        name="ShowTitle"
        value="true" />
    <preference
        name="webview"
        value="org.apache.cordova.engine.mx.SystemWebViewEngine" />

</widget>

