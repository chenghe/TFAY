<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:id="@+id/root_flowlayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/search_container"
        android:background="@color/mx_white"
        android:orientation="vertical"
        >

        <com.minxing.kit.internal.common.view.FlowLayout
            android:id="@+id/flowlayout_tag_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="10dp"/>

        <LinearLayout
            android:id="@+id/rl_btn_newtopic"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_rl_topic_bg"
            android:orientation="vertical"
            android:paddingBottom="15dp"
            android:paddingTop="15dp">

            <com.minxing.kit.ui.widget.MXVariableTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="15dp"
                android:drawableRight="@drawable/mx_icon_forward"
                android:paddingRight="5dp"
                android:text="@string/mx_work_circle_comment_new_topic" />

        </LinearLayout>
    </LinearLayout>
</LinearLayout>