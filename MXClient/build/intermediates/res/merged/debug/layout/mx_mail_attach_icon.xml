<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="@dimen/mx_attach_dimen" >

    <ImageView
        android:id="@+id/attach_icon"
        android:layout_width="@dimen/mx_attach_dimen"
        android:layout_height="@dimen/mx_attach_dimen"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop" />

    <ImageView
        android:id="@+id/play_icon"
        android:layout_width="@dimen/mx_attach_dimen"
        android:layout_height="@dimen/mx_attach_dimen"
        android:src="@drawable/mx_play_icon"
        android:visibility="gone" />

    <View
        android:layout_toRightOf="@id/attach_icon"
        android:layout_width="3.0dip"
        android:layout_height="@dimen/mx_attach_dimen" />

</RelativeLayout>