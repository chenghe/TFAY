<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@color/mx_white"
    android:orientation="vertical"
    android:padding="15.0dip" >

    <include layout="@layout/mx_collections_list_item_header" />

    <LinearLayout
        android:id="@+id/message_video_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15.0dip"
        android:orientation="horizontal" >

        <FrameLayout
            android:id="@+id/video_click_area"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <ImageView
                android:id="@+id/video_cover"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/mx_image_placeholder" />

            <ImageView
                android:id="@+id/video_mask"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/mx_video_mask"
                android:visibility="gone" />
        </FrameLayout>
    </LinearLayout>

</LinearLayout>