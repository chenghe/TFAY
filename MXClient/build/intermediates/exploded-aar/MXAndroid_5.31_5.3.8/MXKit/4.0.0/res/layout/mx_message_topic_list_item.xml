<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@color/mx_white"
    android:gravity="center_vertical"
    android:padding="10.0dip" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1.0"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/mx_group_item_avatar_name_space"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <com.minxing.kit.ui.widget.MXVariableTextView
            android:id="@+id/topic_name"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:singleLine="true"
            android:textColor="@color/mx_blue_gray"
            android:textSize="@dimen/mx_middle_textsize" />
    </LinearLayout>
    <ImageButton
        android:id="@+id/imgbtn_checked"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right|center"
        android:layout_marginRight="10dp"
        android:background="@drawable/mx_checked_selector"/>
</LinearLayout>