<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include
        android:id="@+id/system_title"
        layout="@layout/mx_system_title" />
    <LinearLayout
        android:id="@+id/android_version_container"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        style="@style/mx_bg_setting_item_no_margin_horizontal">

        <com.minxing.kit.ui.widget.MXVariableTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:text="android版本:" />

        <com.minxing.kit.ui.widget.MXVariableTextView
            android:id="@+id/android_version"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/mx_mail_header_footer_left_right_padding"
            android:gravity="center_vertical" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        style="@style/mx_bg_setting_item_no_margin_horizontal">

        <com.minxing.kit.ui.widget.MXVariableTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:text="屏幕密度:" />

        <com.minxing.kit.ui.widget.MXVariableTextView
            android:id="@+id/screen_density"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/mx_mail_header_footer_left_right_padding"
            android:gravity="center_vertical"
            android:textColor="@color/mx_black"/>
    </LinearLayout>


    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        style="@style/mx_bg_setting_item_no_margin_horizontal">

        <com.minxing.kit.ui.widget.MXVariableTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:text="屏幕宽度:"/>

        <com.minxing.kit.ui.widget.MXVariableTextView
            android:id="@+id/screen_width"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/mx_mail_header_footer_left_right_padding"
            android:gravity="center_vertical"
            android:textColor="@color/mx_black"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        style="@style/mx_bg_setting_item_no_margin_horizontal">

        <com.minxing.kit.ui.widget.MXVariableTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:text="屏幕高度:"/>

        <com.minxing.kit.ui.widget.MXVariableTextView
            android:id="@+id/screen_height"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_marginLeft="@dimen/mx_mail_header_footer_left_right_padding"
            android:textColor="@color/mx_black"/>
    </LinearLayout>

    <com.minxing.kit.ui.widget.MXButton
        android:id="@+id/export_database"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dip"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:background="@drawable/mx_comm_blue_button"
        android:visibility="gone"
        android:text="@string/mx_export_database"
        android:textColor="@color/mx_white" />

</LinearLayout>